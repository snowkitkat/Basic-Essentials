# ----------------------------------------[ Custom Commands ] --------------------------------------

command /fly: 
	aliases: /fly
	description: "Give the player the ability to fly!"
	permission: bes.fly
	permission message: "<red>You do not have permission to execute this command!"
	trigger:
		if {fly.%player%} is not set:
			send "<light grey>Flight mode is now <cyan>enabled<light grey>." to player
			set player's flight mode to true
			set {fly.%player%} to true
			stop
			Send "<light grey>Flight mode is now <cyan>disabled<light grey>." to player
		set player's flight mode to false
		delete {fly.%player%}
		stop

command /creative:
	aliases: /gmc
	permission: bes.creative
	permission message: "<red>You do not have permission to execute this command!"
	trigger:
		set gamemode of player to creative
		send "<light grey>Your gamemode was updated to <cyan>creative<light grey>."

command /survival:
	aliases: /gms
	permission: bes.survival
	permission message: "<red>You do not have permission to execute this command!"
	trigger:
		set gamemode of player to survival
		send "<light grey>Your gamemode was updated to <cyan>survival<light grey>."
		
